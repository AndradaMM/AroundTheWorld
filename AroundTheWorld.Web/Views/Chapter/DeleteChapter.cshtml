<div class="modal fade" id="deleteChapter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="#EditChapter">Delete chapter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="delete-pop-up">
                <p>Are you sure you want to delete your chapter?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-dark btn-close-popup" data-dismiss="modal">No</button>
                <button id="delete-chapter-button" type="button" class="btn btn-success">Yes</button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#delete-chapter-button").click(function () {
        var chapterToDeleteId = $("#chapter-to-delete-id").val();
        $.ajax({
            url: "@Url.Action("DeleteChapter", "Chapter")",
            data: {
                id: chapterToDeleteId
            },
            method: 'DELETE',
            success: function () {
                window.location.replace("@Url.Action("EditDiary", "Diary")");
            }
        });
    })
</script>