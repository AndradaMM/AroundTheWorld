<div class="modal fade" id="DeleteDiary" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="#DeleteDiary">Delete account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="delete-pop-up">
                <p>Are you sure you want to delete your diary?</p>
            </div>

            <div class="modal-footer">
                <button type="button" 
                        class="btn btn-dark btn-close-popup" 
                        data-dismiss="modal">No</button>
                <button id="delete-diary-btn" type="button" class="btn btn-success">Yes</button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#delete-diary-btn").click(function () {
        var diaryToDeleteId = $("#diary-to-delete-id").val();
        $.ajax({
            url: "@Url.Action("DeleteDiary", "Diary")",
            data: {
                id: diaryToDeleteId
            },
            method: 'DELETE',
            success: function () {
                window.location.replace("@Url.Action("Index", "Home")");
            }
        });
    })
</script>